# Application Settings
DEBUG=False
APP_ENV=production
NODE_ENV=production

# URL Configuration
BACKEND_URL=http://backend:8000
FRONTEND_URL=https://deer-flow.cyberteam.click
NEXT_PUBLIC_API_URL=https://deer-flow.cyberteam.click/api

# Primary LLM (Choose ONE - uncomment the one you want)
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
# OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here  
# GROQ_API_KEY=gsk_your-groq-key-here
# GOOGLE_API_KEY=your-google-ai-studio-key-here
# XAI_API_KEY=xai-your-grok-key-here
# DASHSCOPE_API_KEY=sk-your-qwen-key-here
# OPENROUTER_API_KEY=sk-or-v1-your-openrouter-key-here

# Search Engine Configuration
SEARCH_API=tavily
TAVILY_API_KEY=tvly-your-tavily-key-here
# BRAVE_SEARCH_API_KEY=your-brave-search-key-here

# Performance Settings
AGENT_RECURSION_LIMIT=30
WEB_CONCURRENCY=2
MAX_WORKERS=4

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters-long-for-production

# Optional: Text-to-Speech (if you want podcast generation)
# VOLCENGINE_TTS_APPID=your-volcengine-appid
# VOLCENGINE_TTS_ACCESS_TOKEN=your-volcengine-token

# Optional: RAG Integration (requires separate RAGFlow setup)
# RAG_PROVIDER=ragflow
# RAGFLOW_API_URL=http://localhost:9388
# RAGFLOW_API_KEY=ragflow-xxx
# RAGFLOW_RETRIEVAL_SIZE=10

# Optional: Monitoring and Logging
# LANGSMITH_TRACING=true
# LANGSMITH_ENDPOINT=https://api.smith.langchain.com
# LANGSMITH_API_KEY=your-langsmith-key
# LANGSMITH_PROJECT=deer-flow-production
